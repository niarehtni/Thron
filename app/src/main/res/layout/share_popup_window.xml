<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewbg"
        android:gravity="center_horizontal"
        android:padding="@dimen/x20"
        android:text="@string/share_title"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewbg"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <TextView
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x20"
            android:drawableTop="@drawable/share_wechat"
            android:gravity="center_horizontal"
            android:text="@string/share_wechat"
            android:textColor="@color/text_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/share_wxcircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x20"
            android:drawableTop="@drawable/share_wxcircle"
            android:gravity="center_horizontal"
            android:text="@string/share_wxcircle"
            android:textColor="@color/text_grey"
            android:textSize="15sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/share_sina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x20"
            android:drawableTop="@drawable/share_sina"
            android:gravity="center_horizontal"
            android:text="@string/share_sina"
            android:textColor="@color/text_grey"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>