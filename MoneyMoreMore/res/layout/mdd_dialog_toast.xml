<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   	<TextView 
   	    android:id="@+id/toast_message"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    style="@style/title_text_left"
   	    android:gravity="center"
   	    android:textSize="18sp"
   	    android:textColor="@color/white"
   	    android:background="@drawable/mdd_dialog_top_max"/>
   	
   	
   	<LinearLayout 
   	    android:id="@+id/toast_btn_layout"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="1dp"
   	    android:layout_below="@id/toast_message"
   	    android:orientation="horizontal">
   	    
   	    
   	    <Button 
   	        android:id="@+id/toast_enter_btn"
   	        android:layout_width="0dp"
   	        android:layout_height="wrap_content"
   	        android:layout_weight="1"
   	        android:textSize="15sp"
   	        android:textColor="@color/white"
   	        android:layout_marginRight="0.5dp"
   	        android:background="@drawable/mdd_selecter_enter_max"/>
   	    
   	    
   	    <Button 
   	        android:id="@+id/toast_cancel_btn"
   	        android:layout_width="0dp"
   	        android:layout_height="wrap_content"
   	        android:layout_weight="1"
   	        android:textSize="15sp"
   	        android:layout_marginLeft="0.5dp"
   	        android:textColor="@color/white"
   	        android:background="@drawable/mdd_selecter_cancel_max"/>
   	    
   	</LinearLayout>

</RelativeLayout>