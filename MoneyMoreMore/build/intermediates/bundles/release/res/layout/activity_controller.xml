<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdd_main_back">

    <include 
        android:id="@+id/controller_title"
        layout="@layout/base_title"/>
    
    <RelativeLayout 
        android:id="@+id/wait_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/controller_title">
        
        <TextView 
            android:id="@+id/wait_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mdd_text"
            android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="20dp"
			android:textSize="20sp"
            android:text="@string/wait_text"/>
        
        <ImageView 
            android:id="@+id/wait_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    
    
</RelativeLayout>
