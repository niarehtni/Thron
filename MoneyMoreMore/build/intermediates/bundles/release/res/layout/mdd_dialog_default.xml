<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/imq_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/imq_dialog_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/imq_message_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="这是message信息"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/imq_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/imq_lion_yellow" />

        <LinearLayout
            android:id="@+id/imq_but_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/imq_enter"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/imq_selecter_btn"
                android:text="@string/enter"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/imq_cancel"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/imq_selecter_btn"
                android:text="@string/mdd_cancle"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>