<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_info_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dip"
    android:background="@drawable/auth_context">

    <TextView
        android:id="@+id/status_text"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="@drawable/auth_title"
        android:gravity="center_vertical"
        android:text="@string/status"
        android:textColor="@color/question_choose"
        android:textSize="16sp" 
        android:paddingLeft="10dip"/>

    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_text"
        android:orientation="vertical" 
        android:paddingBottom="10dip"
        android:paddingLeft="45dip">

        <TextView
            android:id="@+id/auth_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投标转账授权[已关闭]"
            android:textColor="@color/question_choose"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/auth_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款转账授权[已关闭]"
            android:textColor="@color/question_choose"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/auth_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二次分配审核授权[已关闭]"
            android:textColor="@color/question_choose"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>